<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_normal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selected_step"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selected_circle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_selected_circle"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pickup_category"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/font_normal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/mobile_background"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/imgMobileDevices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/mobile_devices"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center_horizontal|bottom"/>

                <ImageView
                    android:id="@+id/imgMobileCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    android:layout_alignRight="@id/imgMobileDevices"
                    android:layout_alignTop="@id/imgMobileDevices"/>

            </RelativeLayout>

            <Space
                android:layout_width="@dimen/space_large"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/computer_background"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/imgComputers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/computers"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center_horizontal|bottom"/>

                <ImageView
                    android:id="@+id/imgComputerCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    android:layout_alignRight="@id/imgComputers"
                    android:layout_alignTop="@id/imgComputers"/>

            </RelativeLayout>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/home_appliences_background"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/imgHomeAppliences"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/home_appliances"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center_horizontal|bottom"/>

                <ImageView
                    android:id="@+id/imgHomeAppCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    android:layout_alignRight="@id/imgHomeAppliences"
                    android:layout_alignTop="@id/imgHomeAppliences"/>

            </RelativeLayout>

            <Space
                android:layout_width="@dimen/space_large"
                android:layout_height="match_parent" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/hybrid_batteries_background"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/imgHybridBatteries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/hybrid_batteries"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center_horizontal|bottom"/>

                <ImageView
                    android:id="@+id/imgHybridCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    android:layout_alignRight="@id/imgHybridBatteries"
                    android:layout_alignTop="@id/imgHybridBatteries"/>

            </RelativeLayout>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@drawable/catalytic_backgroung"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/imgCatalytic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/catalytic_converters"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/colorTextPrimary"
                    android:gravity="center_horizontal|bottom"/>

                <ImageView
                    android:id="@+id/imgCatalyticCheck"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_selected"
                    android:visibility="gone"
                    android:layout_alignRight="@id/imgCatalytic"
                    android:layout_alignTop="@id/imgCatalytic"/>

            </RelativeLayout>

            <Space
                android:layout_width="@dimen/space_large"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_normal" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppButton"
            android:text="@string/next"
            android:textAllCaps="true"/>



    </LinearLayout>
</RelativeLayout>
